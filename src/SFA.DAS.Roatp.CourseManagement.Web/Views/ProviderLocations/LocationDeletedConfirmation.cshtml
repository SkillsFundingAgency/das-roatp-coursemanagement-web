@using SFA.DAS.Roatp.CourseManagement.Web.Models.Standards
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.DfESignIn.Auth.Extensions
@model SFA.DAS.Roatp.CourseManagement.Web.Models.ProviderLocations.ProviderLocationDeletedConfirmedViewModel

@{
    ViewBag.Title = "Training venue deleted";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Training venue deleted
            </h1>
        </div>
        <h1 class="govuk-heading-m">What happens next</h1>

        <p class="govuk-body">
            This venue has been deleted from your list of training venues. If you have any standards linked to this venue, they no longer show as being delivered at this venue on Find apprenticeship training.
        </p>
        <p class="govuk-body">
            Return to your <a class="govuk-link" href="@Model.TrainingVenuesUrl">training venues</a>.
        </p>
    </div>
</div>