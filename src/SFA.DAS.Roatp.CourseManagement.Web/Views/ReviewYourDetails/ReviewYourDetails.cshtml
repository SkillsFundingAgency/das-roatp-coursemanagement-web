@using SFA.DAS.Roatp.CourseManagement.Web.Infrastructure
@model ReviewYourDetailsViewModel
@{
    ViewData["Title"] = "Review your details";
    ViewData["Description"] = "Check and confirm your standards and location details.";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl margin-bottom-30">Manage training and venues</h1>
        <p class="govuk-body">Manage apprenticeship units or standards, training venues and contact details. Changes you make here will appear on Find apprenticeship training.</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-grid-row app-flex-row">
            <div class="govuk-grid-column-one-half">
                <div class="app-feature-box">
                    <h2 class="govuk-heading-s app-feature-box__heading"><a href="@Model.SelectCourseTypeUrl" class="govuk-link">Training</a></h2>
                    <p class="app-feature-box__content">Add, update or delete the training you deliver.</p>
                </div>
            </div>
            <div class="govuk-grid-column-one-half">
                <div class="app-feature-box">
                    <h2 class="govuk-heading-s app-feature-box__heading"><a href="@Model.ProviderLocationsUrl" class="govuk-link">Training venues</a></h2>
                    <p class="app-feature-box__content">Add, update or delete your training venues.</p>
                </div>
            </div>
        </div>

        <div class="govuk-grid-row app-flex-row">
            <div class="govuk-grid-column-one-half">
                <div class="app-feature-box">
                    <h2 class="govuk-heading-s app-feature-box__heading"><a href="@Model.ProviderContactUrl" class="govuk-link">Contact details</a></h2>
                    <p class="app-feature-box__content">Add or update the primary set of contact details you use for your training.</p>
                </div>
            </div>
            <div class="govuk-grid-column-one-half">
                <div class="app-feature-box">
                    <h2 class="govuk-heading-s app-feature-box__heading"><a href="@Model.ProviderDescriptionUrl" class="govuk-link">Overview</a></h2>
                    <p class="app-feature-box__content">View your provider overview that shows on Find apprenticeship training.</p>
                </div>
            </div>
        </div>
    </div>
</div>
