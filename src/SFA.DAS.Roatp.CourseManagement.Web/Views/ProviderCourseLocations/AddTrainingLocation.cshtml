@using SFA.DAS.Roatp.CourseManagement.Web.Models.ProviderCourseLocations
@model ProviderCourseLocationAddViewModel
@{
    ViewBag.Title = "Training locations";
}

@section breadcrumb {
    <a class="govuk-back-link" href="@Model.BackLink">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <div class="govuk-caption-xl">Manage a standard</div>
        <h1 class="govuk-heading-xl">Venue and delivery</h1>
        <form method="post" asp-route="@RouteNames.PostAddProviderCourseLocation" enctype="multipart/form-data" novalidate>
            <input type="hidden" asp-for="@Model.BackLink" />
            <input type="hidden" asp-for="@Model.CancelLink" />

            <div esfa-validation-marker-for="TrainingVenue" class="govuk-form-group">
                <label class="govuk-label" asp-for="TrainingVenues">
                    Select the training venue for this standard.
                </label>
                <span asp-validation-for="TrainingVenue" class="govuk-error-message"></span>
                <select asp-for="TrainingVenue" asp-items="@Model.TrainingVenues" class="govuk-select app-autocomplete" data-placeholder="Start typing the name of the training venue">
                    <option value="" disabled selected></option>
                </select>
            </div>

            <ul class="govuk-list govuk-grid-row">
                <li class="govuk-grid-column-one-half">
                    <div class="govuk-checkboxes__item  govuk-checkboxes--small">
                        <input class="govuk-checkboxes__input" id="HasDayReleaseDeliveryOption" name="HasDayReleaseDeliveryOption" type="checkbox" value="@Model.HasDayReleaseDeliveryOption" asp-for="@Model.HasDayReleaseDeliveryOption">
                        <label class="govuk-label govuk-checkboxes__label" for="HasDayReleaseDeliveryOption" asp-for="@Model.HasDayReleaseDeliveryOption">
                            Day release
                        </label>
                    </div>
                </li>
                <li class="govuk-grid-column-one-half">
                    <div class="govuk-checkboxes__item  govuk-checkboxes--small">
                        <input class="govuk-checkboxes__input" id="HasBlockReleaseDeliveryOption" name="HasBlockReleaseDeliveryOption" type="checkbox" value="@Model.HasBlockReleaseDeliveryOption" asp-for="@Model.HasBlockReleaseDeliveryOption">
                        <label class="govuk-label govuk-checkboxes__label" for="HasBlockReleaseDeliveryOption" asp-for="@Model.HasBlockReleaseDeliveryOption">
                            Block release
                        </label>
                    </div>
                </li>
            </ul>

            <div class="govuk-button-group">
                <button id="SaveAndContinue" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Save and continue
                </button>
                <a id="Cancel" href="@Model.CancelLink" class="govuk-link">Cancel</a>
            </div>
        </form>
    </div>
</div>
