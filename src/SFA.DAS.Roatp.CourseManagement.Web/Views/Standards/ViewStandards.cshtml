@using SFA.DAS.Roatp.CourseManagement.Web.Models.Standards
@model StandardListViewModel
@{
    ViewBag.Title = "Standards";
}

@section breadcrumb {
    <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
}

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-caption-xl">Check your record</div>
        <h1 class="govuk-heading-xl" id="header-standards">Standards you deliver</h1>
        <p class="govuk-body">Check this list of your standards and make sure they stay up to date. This is important as they are used when employers want to find apprenticeship training.</p>
        <table class="govuk-table" aria-labelledby="header-standards">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header das-table-cell-width-60" scope="col"> Standard</th>
                    <th class="govuk-table__header das-table-cell-width-30" scope="col"> <span class="govuk-visually-hidden">Approval status</span> </th>
                    <th class="govuk-table__header govuk-table__header--numeric das-table-cell-width-10" scope="col"> Version</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                @foreach (var standard in Model.Standards)
                {
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <a class="govuk-link" href="@standard.StandardUrl">
                            @standard.CourseDisplayName
                        </a>
                    </td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">
                    @if (standard.ApprovalRequired)
                    {
                        <a class="govuk-link" href="@standard.ConfirmRegulatedStandardUrl">Regulator's approval needed<span class="govuk-visually-hidden"> for @standard.CourseDisplayName</span></a>
                    }
                    </td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">
                        @standard.Version
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <p class="govuk-body" style="display: none; visibility: hidden">
            <a href="#" class="govuk-link">
                Add a standard
            </a>
        </p>
        <button class="govuk-button" data-module="govuk-button" data-disable-on-submit="true" style="display: none; visibility: hidden">Save and continue</button>
    </div>
</div>