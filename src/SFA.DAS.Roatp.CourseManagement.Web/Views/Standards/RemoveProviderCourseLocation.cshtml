@using SFA.DAS.Roatp.CourseManagement.Web.Models.Standards
@model ConfirmRegulatedStandardViewModel

@{
    ViewBag.Title = "Confirm removal";
}
@section breadcrumb {
<a class="govuk-back-link" href="#">Back</a>
}
<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_validationSummaryPartial" model="ViewData.ModelState" />
            <div class="govuk-caption-xl">Training locations</div>
            <h1 class="govuk-heading-xl">Are you sure you want to remove this training option?</h1>
            <form method="post" asp-route="@RouteNames.PostRemoveProviderCourseLocation" enctype="multipart/form-data" novalidate>
                <input type="hidden" asp-for="RegulatorName" />
                <input type="hidden" asp-for="BackLink" />
                <input type="hidden" asp-for="CancelLink" />
                <input type="hidden" asp-for="RefererLink" />
                <div class="grid-row">
                    <div class="column-two-thirds">
                        <table class="govuk-table" aria-describedby="ConfirmRemoveTrainingLocation">
                            <thead class="govuk-table__head">
                                <tr class="govuk-table__row">
                                    <th class="govuk-table__header" scope="col" colspan="3"> </th>
                                </tr>
                            </thead>
                            <tbody class="govuk-table__body">
                                <tr class="govuk-table__row">
                                    <td class="govuk-table__cell">
                                        <span class="app-task-list__task-name">
                                            <strong>
                                                Training venue
                                            </strong>
                                        </span>
                                    </td>
                                    <td class="govuk-table__cell">
                                        <span class="app-task-list__task-name">
                                            <strong>
                                                Delivery method
                                            </strong>
                                        </span>
                                    </td>
                                    <td class="govuk-table__cell">
                                        <span class="app-task-list__task-name">
                                            <strong>
                                                Portable Flexi-job Apprenticeship
                                            </strong>
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="grid-row">
                            <details class="govuk-details" data-module="govuk-details">
                                <summary class="govuk-details__summary">
                                    <span class="govuk-details__summary-text">
                                        More on removing this training option?
                                    </span>
                                </summary>
                                <div class="govuk-details__text">
                                    This combination of venue, delivery method and whether it is a flexi-job apprenticeship will no longer be attached to this standard.
                                </div>
                                <div class="govuk-details__text">
                                    If you need to re-add this as an option, you can do so.
                                </div>
                            </details>
                        </div>
                </div>
                <div class="govuk-button-group">
                    <button id="SaveAndContinue" class="govuk-button govuk-button--warning" data-module="govuk-button" data-disable-on-submit="true">
                        Remove training location
                    </button>
                    <a id="Cancel" href="#" class="govuk-link">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>