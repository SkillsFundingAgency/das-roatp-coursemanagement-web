@model SFA.DAS.Roatp.CourseManagement.Web.Models.ProviderContact.ConfirmUpdateStandardsViewModel
@{
    ViewBag.Title = "Update existing standards with contact details";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <partial name="_validationSummary" />
        <div class="govuk-caption-xl">Save contact details</div>
        <h1 class="govuk-heading-xl">Update your existing standards with this phone number</h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">Saving a new phone number to your standards will not remove any email addresses associated with them.</p>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Phone number
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.PhoneNumber
                </dd>
            </div>
        </dl>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">                    
        <form method="post" enctype="multipart/form-data" novalidate>
            <div esfa-validation-marker-for="HasOptedToUpdateExistingStandards" class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <input type="hidden" asp-for="@Model.PhoneNumber" />
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Do you want to update your existing standards with this phone number?</legend>
                    <div id="HasOptedToUpdateExistingStandards" class="govuk-radios" data-module="govuk-radios">
                        <span asp-validation-for="HasOptedToUpdateExistingStandards" class="govuk-error-message"></span>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="update-existing-standards-yes" type="radio" value="true"
                                   asp-for="HasOptedToUpdateExistingStandards" sfa-validationerror-class="form-control-error">
                            <label class="govuk-label govuk-radios__label" for="update-existing-standards-yes">
                                Yes, I want to choose which standards to update with this phone number
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="update-existing-standards-no" type="radio" value="false"
                                   asp-for="HasOptedToUpdateExistingStandards" sfa-validationerror-class="form-control-error">
                            <label class="govuk-label govuk-radios__label" for="update-existing-standards-no">
                                No, I just want to save this phone number as an option for when I add a new standard
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button id="submit" type="submit" class="govuk-button">Continue</button>
            </div>
        </form>
    </div>
</div>
